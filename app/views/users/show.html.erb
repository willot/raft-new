<div class="standard_box">
  <h1><%= @user.first_name %>!</h1>
  <h2><%= @user.username %></h2>
  <h3><%= @user.bio %></h3>
  <% if @user.id == current_user.id %>
    <%= link_to "Find users/guides", users_path %><br>
    <%= link_to "Messages", user_messages_path(@user.id) %>
  <% else %>
    <%= link_to "Message this person!", new_user_message_path(@user.id) %>
  <% end %><br>


  <%= flash[:notice] %>


</div>
