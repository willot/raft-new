<div class="user_box">
  <h1 id="first_name" ><%= @user.first_name %>!</h1>
    <% if @user.guide == true %>
    <h2 id="guide_status"><%= "I am available to guide you through the streets of #{@user.location.city.capitalize}" %></h2>
    <p><%= @user.bio %></p>
  <% end %>

  <% if @user.id == current_user.id %>
    <%= link_to "Find users/guides", users_path %><br>
    <%= link_to "Messages", user_messages_path(@user.id) %>
  <% else %>
    <%= link_to "Message this person!", new_user_message_path(@user.id) , :id => 'write_message' %>
  <% end %><br>

  <%= flash[:notice] %>

</div>
<div id="background"></div>
