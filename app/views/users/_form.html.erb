<%= form_for(@user) do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :age %>
  <%= f.text_field :age, :placeholder =>"Optional" %>
  <%= f.label :bio %>
  <%= f.text_area :bio %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password, "confirmed your password" %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit %>
<%end%>
