<!DOCTYPE html>
<html>
<head>
  <title>Raft</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <link href='https://api.tiles.mapbox.com/mapbox.js/v2.1.5/mapbox.css' rel='stylesheet' />
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
<body>
  <div id="top">
    <header>
      <nav>
      <h2><%= link_to 'Raft', '/' %></h2>
      <ul>
        <% if current_user%>
          <li ><%= link_to current_user.username.capitalize, user_path(current_user.id) %></li>
          <li ><%= link_to 'Trips', trips_path %></li>
          <li><%= link_to 'Guides', guides_path %></li>
          <li><%= link_to 'Sign Out', '/logout' %></li>
        <% else %>
          <li><%= link_to 'Log In', '/login', :id => 'login' %></li>
          <li><%= link_to 'Sign Up', new_user_path %></li>
        <% end %>
      </ul>
    </nav>
    </header>
  </div>

  <%= yield %>

  <footer>
  </footer>
</body>
</html>
